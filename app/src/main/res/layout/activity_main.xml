<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:clipToPadding="false"
        android:clipChildren="false">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quickstart Device"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#1A1A1A"
            android:letterSpacing="0.01"
            android:layout_marginBottom="16dp" />

        <!-- Battery Widget -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SISA BATERAI"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="#9CA3AF"
                    android:letterSpacing="0.1"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ProgressBar
                        android:id="@+id/batteryProgressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="0dp"
                        android:layout_height="24dp"
                        android:layout_weight="1"
                        android:max="100"
                        android:progress="0"
                        android:progressTint="#10B981"
                        android:progressBackgroundTint="#E5E7EB" />

                    <TextView
                        android:id="@+id/tvBatteryPercentage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0%"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1A1A1A"
                        android:layout_marginStart="12dp"
                        android:minWidth="45dp"
                        android:gravity="end" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Feed Amount Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:baselineAligned="false">

            <!-- Jumlah Pakan Alat 1 -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PAKAN ALAT 1"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textColor="#9CA3AF"
                        android:gravity="center"
                        android:letterSpacing="0.1"
                        android:layout_marginBottom="12dp" />

                    <RelativeLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginVertical="8dp">

                        <ProgressBar
                            android:id="@+id/progressPakan1"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:max="100"
                            android:progress="0"
                            android:indeterminate="false"
                            android:progressDrawable="@drawable/circular_progress"
                            android:layout_centerInParent="true" />

                        <TextView
                            android:id="@+id/tvPakan1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0%"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="#1A1A1A"
                            android:layout_centerInParent="true" />
                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Jumlah Pakan Alat 2 -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PAKAN ALAT 2"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textColor="#9CA3AF"
                        android:gravity="center"
                        android:letterSpacing="0.1"
                        android:layout_marginBottom="12dp" />

                    <RelativeLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginVertical="8dp">

                        <ProgressBar
                            android:id="@+id/progressPakan2"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:max="100"
                            android:progress="0"
                            android:indeterminate="false"
                            android:progressDrawable="@drawable/circular_progress"
                            android:layout_centerInParent="true" />

                        <TextView
                            android:id="@+id/tvPakan2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0%"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="#1A1A1A"
                            android:layout_centerInParent="true" />
                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Schedule Section - Jadwal 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:baselineAligned="false">

            <!-- Jadwal Pakan Alat 1 -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="JADWAL 1 ALAT 1"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textColor="#9CA3AF"
                        android:letterSpacing="0.1"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="#F3F4F6"
                        android:padding="2dp"
                        android:baselineAligned="false">

                        <TextView
                            android:id="@+id/tvJadwal1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="--:--"
                            android:textSize="13sp"
                            android:textColor="#374151"
                            android:textStyle="bold"
                            android:padding="8dp" />

                        <ImageButton
                            android:id="@+id/btnCalendar1"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@android:drawable/ic_menu_my_calendar"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:tint="#6366F1"
                            android:contentDescription="Pilih Jadwal" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Jadwal Pakan Alat 2 -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="JADWAL 1 ALAT 2"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textColor="#9CA3AF"
                        android:letterSpacing="0.1"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="#F3F4F6"
                        android:padding="2dp"
                        android:baselineAligned="false">

                        <TextView
                            android:id="@+id/tvJadwal1Alat2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="--:--"
                            android:textSize="13sp"
                            android:textColor="#374151"
                            android:textStyle="bold"
                            android:padding="8dp" />

                        <ImageButton
                            android:id="@+id/btnCalendar1Alat2"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@android:drawable/ic_menu_my_calendar"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:tint="#6366F1"
                            android:contentDescription="Pilih Jadwal" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Schedule Section - Jadwal 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:baselineAligned="false">

            <!-- Jadwal 2 Pakan Alat 1 -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="JADWAL 2 ALAT 1"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textColor="#9CA3AF"
                        android:letterSpacing="0.1"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="#F3F4F6"
                        android:padding="2dp"
                        android:baselineAligned="false">

                        <TextView
                            android:id="@+id/tvJadwal2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="--:--"
                            android:textSize="13sp"
                            android:textColor="#374151"
                            android:textStyle="bold"
                            android:padding="8dp" />

                        <ImageButton
                            android:id="@+id/btnCalendar2"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@android:drawable/ic_menu_my_calendar"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:tint="#6366F1"
                            android:contentDescription="Pilih Jadwal" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Jadwal 2 Pakan Alat 2 -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="JADWAL 2 ALAT 2"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textColor="#9CA3AF"
                        android:letterSpacing="0.1"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="#F3F4F6"
                        android:padding="2dp"
                        android:baselineAligned="false">

                        <TextView
                            android:id="@+id/tvJadwal2Alat2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="--:--"
                            android:textSize="13sp"
                            android:textColor="#374151"
                            android:textStyle="bold"
                            android:padding="8dp" />

                        <ImageButton
                            android:id="@+id/btnCalendar2Alat2"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@android:drawable/ic_menu_my_calendar"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:tint="#6366F1"
                            android:contentDescription="Pilih Jadwal" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Manual Feed Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <!-- Pakan Manual 1 -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PAKAN MANUAL 1"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textColor="#9CA3AF"
                        android:letterSpacing="0.1"
                        android:layout_marginBottom="12dp" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchManual1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="OFF"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="#374151"
                        android:background="#F3F4F6"
                        android:padding="12dp"
                        android:gravity="center"
                        android:checked="false"
                        app:thumbTint="#FFFFFF"
                        app:trackTint="#10B981" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Pakan Manual 2 -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PAKAN MANUAL 2"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textColor="#9CA3AF"
                        android:letterSpacing="0.1"
                        android:layout_marginBottom="12dp" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchManual2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="OFF"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="#374151"
                        android:background="#F3F4F6"
                        android:padding="12dp"
                        android:gravity="center"
                        android:checked="false"
                        app:thumbTint="#FFFFFF"
                        app:trackTint="#10B981" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>
</ScrollView>